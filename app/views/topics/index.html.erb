<h1>aMUSICAL iNQUIRY</h1>

<table>
  <thead>
    <tr>
      <th>Final Count</th>
      <th colspan="1"></th>
      <th>Topics</th>
      <th colspan="1"></th>

    </tr>
  </thead>

  <tbody>
    <% @topics.each do |topic| %>

      <tr>
        <td><%= pluralize(topic.votes.count - topic.downvotes.count, "vote") %></td>
        <td><%= link_to topic.title, topic %></td>
        <td><%= button_to 'Hate it!', downvote_topic_path(topic), method: :post %></td>
        <td><%= button_to 'Love it!', upvote_topic_path(topic), method: :post %></td>
        <td><%= link_to 'Delete', topic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
